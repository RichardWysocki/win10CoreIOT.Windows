<Page
    x:Class="UWP.WebViewer.ConfigurationsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP.WebViewer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Loaded="Page_Loaded">

    <Grid>
        <TextBlock x:Name="WebsiteURLLabel" HorizontalAlignment="Left" Margin="35,151,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="110">
            <Run Text="WebSite URL: "/>
            <LineBreak/>
            <Run/>
        </TextBlock>
        <TextBox x:Name="_websiteURL" HorizontalAlignment="Left" Margin="207,139,0,0" TextWrapping="Wrap" Text="www.RichardWyscki.com" VerticalAlignment="Top" Width="265"/>
        <Button x:Name="_saveWebsiteURL" Content="Save" HorizontalAlignment="Left" Margin="608,139,0,0" VerticalAlignment="Top" Click="_saveWebsiteURL_Click"/>
        <Button x:Name="_back" Content="Back" HorizontalAlignment="Left" Margin="35,30,0,0" VerticalAlignment="Top" Width="208" Click="_back_Click"/>

    </Grid>
</Page>
